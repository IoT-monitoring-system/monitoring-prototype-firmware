{
	"name": "ESP-IDF",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"idf.showOnboardingOnInit": false,
				"idf.toolsPath": "/opt/esp",
				"idf.espIdfPath": "/opt/esp/idf",
				"terminal.integrated.shell.linux": "/bin/bash"
			},
			"extensions": [
				"espressif.esp-idf-extension",
				"ms-vscode.cmake-tools",
				"ms-vscode.cpptools-extension-pack"
			]
		}
	},
	"userEnvProbe": "loginInteractiveShell",
	"runArgs": [
		"--privileged",
		"-v",
		"/dev:/dev",
		"-v",
		"/etc/udev/rules.d:/etc/udev/rules.d"
	],
	"mounts": [
		"source=vscode-${localWorkspaceFolderBasename}-extensions,target=/root/.vscode-server/extensions,type=volume",
		"source=vscode-${localWorkspaceFolderBasename}-userdata,target=/root/.vscode-server/userdata,type=volume",
		"source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
	]
}
